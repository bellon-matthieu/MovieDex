<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Mes Dex</title>
    <link rel="stylesheet" href="/css/my-dexes.css">
    <link rel="stylesheet" href="/css/dex-display.css">
  </head>

  <body>
      <a href="create-dex">Cr√©er une dex</a>
      <div class="dex-container">
        <% for (let i = 0; i < dexes.length; i++) {%>
          <div class="dex-display">
              <a href="dex?id=<%= dexes[i]['_id'] %>">
                <%= dexes[i]["name"] %>
              </a><br>

              <div class="movies">

                <section>
                  <% if (dexes[i]["movies"][0]) {%>
                    <a class="movie" href="dex?id=<%= dexes[i]['_id'] %>">
                      <img src="<%= dexes[i]["movies"][0]["thumbnail"]%>" alt="">
                    </a>
                  <% } %>
                </section>


                <section>
                  <% if (dexes[i]["movies"][1]) {%>
                    <a class="movie" href="dex?id=<%= dexes[i]['_id'] %>">
                      <img src="<%= dexes[i]["movies"][1]["thumbnail"]%>" alt="">
                    </a>
                  <% } %>
                </section>


                <section>
                  <% if (dexes[i]["movies"][2]) {%>
                    <a class="movie" href="dex?id=<%= dexes[i]['_id'] %>">
                      <img src="<%= dexes[i]["movies"][2]["thumbnail"]%>" alt="">
                    </a>
                  <% } %>
                </section>
            </div>
          </div>
        <% } %>
      </div>


  </body>
</html>