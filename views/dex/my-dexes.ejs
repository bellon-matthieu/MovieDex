<head>
  <link rel="stylesheet" href="/css/my-dexes.css">
  <link rel="stylesheet" href="/css/dex-display.css">
</head>

<body>
  <div class="my-dexes-container">
    <h1 class="title">Mes dex</h1>
      <a class="create-dex-button" href="create-dex"><h3>Cr√©er une nouvelle dex</h3></a>
      <div class="dex-container">
        <% for (let i = 0; i < dexes.length; i++) {%>
          <div class="dex-display">
              <a class="dex-display-name" href="dex?id=<%= dexes[i]['_id'] %>">
                <h2><%= dexes[i]["name"] %></h2>
              </a>
              <div class="movies-diplay">
                  <% if (dexes[i]["movies"][0]) {%>
                    <a class="single-movie-container" href="dex?id=<%= dexes[i]['_id'] %>">
                      <img class="movie" src="<%= dexes[i]["movies"][0]["thumbnail"]%>" alt="">
                    </a>
                  <% } %>
                  <% if (dexes[i]["movies"][1]) {%>
                    <a class="single-movie-container" href="dex?id=<%= dexes[i]['_id'] %>">
                      <img class="movie" src="<%= dexes[i]["movies"][1]["thumbnail"]%>" alt="">
                    </a>
                  <% } %>
                  <% if (dexes[i]["movies"][2]) {%>
                    <a class="single-movie-container" href="dex?id=<%= dexes[i]['_id'] %>">
                      <img class="movie" src="<%= dexes[i]["movies"][2]["thumbnail"]%>" alt="">
                    </a>
                  <% } %>
            </div>
          </div>
        <% } %>
      </div>
  </div>
</body>